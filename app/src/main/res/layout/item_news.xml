<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/item_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/news_thumbnail_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_card_thumbnail_height"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/cd_news_thumbnail"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/news_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/cd_news_icon"
                android:paddingLeft="@dimen/news_icon_padding_left_start"
                android:paddingStart="@dimen/news_icon_padding_left_start" />

            <TextView
                android:id="@+id/news_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/news_provider_padding"
                android:paddingLeft="@dimen/news_provider_padding_left_start"
                android:paddingStart="@dimen/news_provider_padding_left_start"
                android:textColor="@color/colorSecondary" />

        </LinearLayout>

        <TextView
            android:id="@+id/news_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/news_headline_padding"
            android:paddingLeft="@dimen/news_headline_padding"
            android:paddingRight="@dimen/news_headline_padding"
            android:paddingStart="@dimen/news_headline_padding"
            android:textSize="@dimen/news_headline_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/news_date_padding"
            android:paddingLeft="@dimen/news_date_padding"
            android:paddingStart="@dimen/news_date_padding"
            android:textColor="@color/colorSecondaryLight" />

    </LinearLayout>

</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.benway0.mundo.views.AutofitRecyclerView
        android:id="@+id/auto_fit_recycler_view_bookmarks_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:columnWidth="@dimen/card_column_width"
        android:padding="@dimen/item_margin" />

    <TextView
        android:id="@+id/bookmarks_fragment_nothingtoload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="48dp"
        android:text="@string/no_bookmarks"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone" />

</LinearLayout>